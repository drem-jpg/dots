alias syncpkgs='{
  echo "[pkgs]"
  xbps-query -m | sed "s/-[0-9][^ ]*//" | sort | awk '\''{ printf "%s = true\n", $1 }'\''
} > "$HOME/dotfiles/bootstrap/VoidLinux/packages/pkgs.toml"'
#alias sp="syncpkgs"
alias sp="xbps-query -m | sed 's/-[0-9][^ ]*//' | sort > ~/.packages.list"

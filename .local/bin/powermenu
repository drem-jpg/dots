#!/usr/bin/env bash

actions=$(echo -e "  Lock\n  Shutdown\n  Reboot\n  Suspend\n  Hibernate\n󰞘  Logout")

# Display logout menu
selected_option=$(echo -e "$actions" | dmenu || pkill -x rofi)

# Perform actions based on the selected option
case "$selected_option" in
*Lock)
  slock
  ;;
*Shutdown)
  loginctl poweroff 2>/dev/null
  ;;
*Reboot)
  loginctl reboot
  ;;
*Suspend)
  suspend
  ;;
*Hibernate)
  loginctl hibernate
  ;;
*Logout)
  st -e pkill -KILL -u "$USER"
  ;;
esac
